<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="General Board"
        android:textStyle="bold"
        android:textSize="40dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:id="@+id/userIdWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/userIdEdit"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                tools:ignore="SpeakableTextPresentCheck"/>
            <Button
                android:id="@+id/idCheckBtn"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="중복확인"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="0dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userPwWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="PW"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/userPwEdit"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="numberPassword"
                tools:ignore="SpeakableTextPresentCheck"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userNickWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/userNickEdit"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                tools:ignore="SpeakableTextPresentCheck"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userEmailWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textSize="20dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/userEmailEdit"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                tools:ignore="SpeakableTextPresentCheck" />
            <Button
                android:id="@+id/codeSendBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="2"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:padding="3dp"
                android:text="인증번호 받기"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userEmailProveWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="90dp"
            android:paddingRight="20dp">

            <EditText
                android:id="@+id/userEmailProveEdit"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="인증번호"/>
            <Button
                android:id="@+id/emailProveBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="2"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:padding="3dp"
                android:text="인증"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="회원가입"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>
</LinearLayout>